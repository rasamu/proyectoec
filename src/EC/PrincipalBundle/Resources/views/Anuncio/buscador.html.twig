{% extends 'ECPrincipalBundle::layout.html.twig' %}

{% block title %}
	{% trans %}Anuncios{% endtrans %}
	{{ parent() }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    
    <link rel='stylesheet' type='text/css' href="{{ asset('css/anuncios.css') }}" />
    <link rel='stylesheet' type='text/css' href="{{ asset('css/jquery.fancybox-1.3.4.css') }}" media="screen"/>
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	
	<script type='text/javascript' src="{{ asset('js/jquery.fancybox-1.3.4.pack.js') }}" ></script>
	<script type='text/javascript' src="{{ asset('js/jquery.easing-1.3.pack.js') }}" ></script>
	<script type='text/javascript'>	
		$(document).ready(function() {
			/* Apply fancybox to multiple items */
			$("a.grouped_elements").fancybox({
				'transitionIn'	:	'elastic',
				'transitionOut'	:	'elastic',
				'speedIn'		:	600, 
				'speedOut'		:	200, 
				'overlayShow'	:	false,
			});
		});
	</script>
{% endblock %}

{% block colder %}
	{{ parent() }}
	
	{% if anuncios is empty%}
		<p>No existen anuncios.</p>
	{% else %}
		{% for anuncio in anuncios %}
			<article class="anuncio">
				<section class="titulo_anuncio">
					{{anuncio.fecha | date("d/m/Y")}} {{anuncio.comunidad.city.name}} ({{anuncio.comunidad.city.province.name}})
					<b>{{anuncio.categoria.nombre}}</b>: {{anuncio.titulo}}
					<section class="referencia_anuncio">
						r{{anuncio.id}}
					</section>
				</section>
				<div>
					<section class="foto_anuncio">
						{% set fotos = anuncio.getImagenes() %}
						{% if fotos|length()!=0 %}
							{% set count=0 %}
							{% for foto in fotos%}
								{% if count==0 %}
									<a class="grouped_elements" rel="group{{anuncio.id}}" href="{{ asset(foto.getWebPath()) }}">
										<img src="{{ image(asset(foto.getWebPath())).cropResize(200,150) }}" alt="Imagen anuncio" />
									</a>
									{% set count=count+1%}
								{% else %}
									<a class="grouped_elements no_mostrar" rel="group{{anuncio.id}}" href="{{ asset(foto.getWebPath()) }}"></a>
								{% endif %}
							{% endfor %}
						{% else %}
							<img src="{{ asset('images/no_foto.jpg') }}" alt="No foto" />
						{% endif %}
					</section>
					<section class="descripcion_anuncio">
						{{anuncio.descripcion}}
					</section>
				</div>
				<section class="footer_anuncio">
					<section class="precio">
						Precio: <b>{{anuncio.precio}} â‚¬</b>
					</section>
					<section class="num_fotos">
						<b>{{anuncio.getImagenes().count()}}</b> {% trans %}Fotos{% endtrans %}
					</section>
					<a class="verde" href="#">{% trans %}Contactar{% endtrans %}</a>
					<a class="naranja" href="#">{% trans %}Denunciar{% endtrans %}</a>
				</section>
			</article>
		{% endfor %}		
	{% endif %}	
		
{% endblock %}