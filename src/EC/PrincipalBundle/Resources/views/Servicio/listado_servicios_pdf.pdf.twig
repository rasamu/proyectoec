<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE pdf SYSTEM "%resources%/dtd/doctype.dtd">
<pdf>
	<dynamic-page>
		<h1 padding="10px" background-color="#005D84" width="100%"><span color="#F7D118">Entre</span><span color="white">Comunidades</span></h1>
		<h2 color="#223E56">{%trans%}Comunidad{%endtrans%}: {{comunidad.codigo}}</h2>
		<p>{%trans%}Listado de Servicios{%endtrans%}</p>

		<table>
			<tr padding="5px">
				<td text-align="center" font-style="bold">{%trans%}Categoría{%endtrans%}</td>
				<td text-align="center" font-style="bold">{%trans%}Cif{%endtrans%}</td>
				<td text-align="center" font-style="bold">{%trans%}Nombre{%endtrans%}</td>
				<td text-align="center" font-style="bold">{%trans%}Ciudad{%endtrans%}</td>
				<td text-align="center" font-style="bold">{%trans%}Dirección{%endtrans%}</td>
				<td text-align="center" font-style="bold">{%trans%}Teléfono{%endtrans%}</td>
			</tr>
			
			{% for servicio in servicios %}
				<tr>
				   <td>{{servicio.categoria.nombre|trans}}</td>
       			<td>{{servicio.cif}}</td>
       			<td>{{servicio.nombre}}</td>
       			<td>{{servicio.city.name}} ({{servicio.city.province.name}})</td>
       			<td>{{servicio.direccion}}</td>
       			<td>{{servicio.telefono}}</td>
      		</tr> 
			{% endfor %}

		</table>
		<p text-align="right">{{ "now"|date("d/m/Y") }}</p>
	</dynamic-page>
</pdf>