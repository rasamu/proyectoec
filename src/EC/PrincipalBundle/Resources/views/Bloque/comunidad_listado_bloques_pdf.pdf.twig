<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE pdf SYSTEM "%resources%/dtd/doctype.dtd">
<pdf>
	<dynamic-page>
		<h1 padding="10px" background-color="#316431" width="100%"><span color="yellow">Entre</span><span color="white">Comunidades</span></h1>
		<h2>Comunidad: {{comunidad.codigo}}</h2>
		<p>Listado de bloques</p>

		<table>
			<tr padding="5px">
				<td text-align="center" font-style="bold">NºBloque</td>
				<td text-align="center" font-style="bold">Dirección</td>
			</tr>
			
			{% for bloque in bloques %}
				<tr>
				   <td>{{bloque.num}}</td>
       			<td>{{bloque.direccion}}</td>
      		</tr> 
			{% endfor %}

		</table>
		<p text-align="right">{{ "now"|date("d/m/Y") }}</p>
	</dynamic-page>
</pdf>