{% extends 'ECPrincipalBundle::layout_comunidad.html.twig' %}

{% block title %}
	{{ parent() }}
	{% trans %}Bloques{% endtrans %}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/table.css') }}" type="text/css" rel="stylesheet" />
    <link href="{{ asset('css/boton_acciones.css') }}" type="text/css" rel="stylesheet" />
    <link rel='stylesheet' type='text/css' href="{{ asset('css/botones.css') }}" />
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script type="text/javascript">
       	var Buscar = '{%trans%}Buscar{%endtrans%}';
       	var Mostrando = '{%trans%}Mostrando{%endtrans%}';
       	var entradas = '{%trans%}entradas{%endtrans%}';
       	var de = '{%trans%}de{%endtrans%}';
       	var a = '{%trans%}a{%endtrans%}';
			var Anterior = '{%trans%}Anterior{%endtrans%}';
			var Siguiente = '{%trans%}Siguiente{%endtrans%}';
			var NoDatos = '{%trans%}No hay datos{%endtrans%}';
			var NoRegistros = '{%trans%}No hay registros coincidentes encontrados{%endtrans%}';
			var Cargando = '{%trans%}Cargando...{%endtrans%}';
			var Procesando = '{%trans%}Procesando...{%endtrans%}';
			var filtrado = '{%trans%}filtrado{%endtrans%}';
	</script>
	<script type='text/javascript' src="{{ asset('js/jquery.dataTables.js') }}"></script>  
	<script type="text/javascript">
			$(document).ready(function() {
				$('#example').dataTable();
			} );
	</script>
{% endblock %}

{% block colder %}
{{parent()}}
	{% for flashMessage in app.session.flashbag.get('notice') %}
			{% for flashColor in app.session.flashbag.get('color') %}
    			<div class="flash-notice mensaje {{flashColor}}">
        			{{ flashMessage }}
    			</div>
    		{% endfor %}
	{% endfor %}

	<h2 class="verde centrado">{% trans %}Bloques{% endtrans %}</h2>
	
	<a href="{{ path('ec_adminfincas_comunidad_listado_bloques_pdf', { 'cif': comunidad.cif }) }}"><img src="{{ asset('images/pdf-icon.png') }}" alt="pdf"></a>
	<a href="{{ path('ec_adminfincas_comunidad_listado_bloques_csv', { 'cif': comunidad.cif }) }}"><img src="{{ asset('images/csv-icon.png') }}" alt="csv"></a>
	<a class="boton_alta btn_nuevo" href="{{ path('ec_adminfincas_comunidad_alta_bloque', { 'cif': comunidad.cif }) }}">{% trans %}Nuevo Bloque{% endtrans %}</a>
	
	<div id="demo">
		<table class="display" id="example">
			<thead>
				<tr>
					<th id="n_bloque">{% trans %}Nº Bloque{% endtrans %}</th>
					<th id="direccion">{% trans %}Dirección{% endtrans %}</th>
					<th id="n_propietarios">{% trans %}NºPropietarios{% endtrans %}</th>
					<th id="acciones">{% trans %}Acciones{% endtrans %}</th>
				</tr>
			</thead>
			<tbody>
			{% for bloque in bloques %}
				<tr class="gradeX">
       			<td headers="n_bloque">{{bloque.num}}</td>
       			<td headers="direccion">{{bloque.direccion}}</td>
       			<td headers="n_propietarios">{{bloque.getPropietarios()|length}}</td>
       			<td headers="acciones"><a href="{{ path('ec_adminfincas_comunidad_eliminar_bloque', { 'cif': comunidad.cif, 'num': bloque.num}) }}" onclick="return confirm('{%trans%}¿Estás seguro de eliminar el bloque{%endtrans%} {{bloque.direccion}}? {%trans%}Se eliminarán todos sus propietarios con sus respectivos anuncios e incidencias.{%endtrans%}')"><img src="{{ asset('images/action-cancel-icon.png') }}" alt="delete"></a></td>
      		</tr> 
			{% endfor %}
			</tbody>
		</table>
	</div>
	
{% endblock %}