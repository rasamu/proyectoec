{% extends 'ECPrincipalBundle::layout.html.twig' %}

{% block title %}
	{% trans %}Alta administrador de fincas{% endtrans %}
	{{ parent() }}
{% endblock %}

{% block sidebar %}
 {{ parent() }}
 
{% endblock %}

{% block colder %}
 {{ parent() }}
 
 		{% for flashMessage in app.session.flashbag.get('notice') %}
			{% for flashColor in app.session.flashbag.get('color') %}
    			<div class="flash-notice mensaje" style="color:{{flashColor}}; border-color:{{flashColor}};">
        		{{ flashMessage }}
    			</div>
    		{% endfor %}
		{% endfor %}
 
		<section class="form">
			<hgroup>
				<h2 class="verde centrado">{% trans %}Alta administrador de fincas{% endtrans %}</h2>
			</hgroup>
			
			{{ form_start(form) }}
    		<div style="color:red;">{{ form_errors(form) }}</div>
    		<div class="campo">
       		 <div class="label_campo">{{ form_label(form.dni) }} *</div>
        		{{ form_widget(form.dni) }}
        		<div class="error">{{ form_errors(form.dni) }}</div>
    		</div>
    		
    		<div class="campo">
       		 <div class="label_campo">{{ form_label(form.n_colegiado) }}</div>
        		{{ form_widget(form.n_colegiado) }}
        		<div class="error">{{ form_errors(form.n_colegiado) }}</div>
    		</div>
 
    		<div class="campo">
        		<div class="label_campo">{{ form_label(form.nombre) }} *</div>
       		 {{ form_widget(form.nombre) }}
        		<div class="error">{{ form_errors(form.nombre) }}</div>
    		</div>
    		
    		<div class="campo">
        		<div class="label_campo">{{ form_label(form.apellidos) }} *</div>
       		 {{ form_widget(form.apellidos) }}
