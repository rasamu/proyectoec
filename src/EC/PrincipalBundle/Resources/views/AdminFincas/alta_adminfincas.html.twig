    		<div class="campo">
        		<div class="label_campo">{{ form_label(form.email) }} *</div>
        		{{ form_widget(form.email) }}        
       		 <div class="error">{{ form_errors(form.email) }}</div>
    		</div>

   		 <div class="campo">
        		<div class="label_campo">{{ form_label(form.direccion) }} *</div>
        		{{ form_widget(form.direccion) }}
        		<div class="error">{{ form_errors(form.direccion) }}</div>        
    		</div>

    		<div class="campo">
        		<div class="label_campo">{{ form_label(form.provincia) }} *</div>
        		{{ form_widget(form.provincia) }}
        		<div class="error">{{ form_errors(form.provincia) }}</div>     
    		</div>

    		<div class="campo">
        		<div class="label_campo">{{ form_label(form.localidad) }} *</div>
        		{{ form_widget(form.localidad) }}
       		 <div class="error">{{ form_errors(form.localidad) }}</div>       
    		</div>

			<div class="campo">
        		<div class="label_campo">{{ form_label(form.password.first) }} *</div>
        		{{ form_widget(form.password.first) }}
       		 <div class="error">{{ form_errors(form.password.first) }}</div>      
    		</div>    		
    		
    		<div class="campo">
        		<div class="label_campo">{{ form_label(form.password.second) }} *</div>
        		{{ form_widget(form.password.second) }}
       		 <div class="error">{{ form_errors(form.password.second) }}</div>    
    		</div>   		

    		<div class="campo">
    		 	(*) {% trans %}Campo obligatorio{% endtrans %}
    			<input type="submit" value="{% trans %}Enviar{% endtrans %}"/>
    			<input type="reset" value="{% trans %}Borrar{% endtrans %}"/>
    		</div>
 
			{{ form_end(form) }}
		</section>
{% endblock %}
