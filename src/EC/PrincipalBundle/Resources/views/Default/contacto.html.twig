{% extends 'ECPrincipalBundle::layout.html.twig' %}

{% block title %}
	{% trans %}Contacto{% endtrans %}
	{{ parent() }}
{% endblock %}

{% block colder %}
	{{ parent() }}
	
	{% for flashMessage in app.session.flashbag.get('notice') %}
			{% for flashColor in app.session.flashbag.get('color') %}
    			<div class="flash-notice mensaje" style="color:{{flashColor}}; border-color:{{flashColor}};">
        		{{ flashMessage }}
    			</div>
    		{% endfor %}
	{% endfor %}
	
	<section id="form_login">
		<hgroup>
			<h2 class="verde centrado">{% trans %}Contacto{% endtrans %}</h2>
		</hgroup>
		
		{{ form_start(form) }}
    		<div class="rojo">{{ form_errors(form) }}</div>
 
    		<div class="campo_login">
        		<div class="label_campo">{{ form_label(form.Nombre) }}</div>
        		{{ form_widget(form.Nombre) }}
        		<div class="error">{{ form_errors(form.Nombre) }}</div>
    		</div>
 
    		<div class="campo_login">
        		<div class="label_campo">{{ form_label(form.Email) }}</div>
        		{{ form_widget(form.Email) }}
        		<div class="error">{{ form_errors(form.Email) }}</div>
    		</div>
    
    		<div class="campo_login">
        		<div class="label_campo">{{ form_label(form.Mensaje) }}</div>
        		<p>{{ form_widget(form.Mensaje) }}</p>
        		<div class="error">{{ form_errors(form.Mensaje) }}</div>
    		</div>

    		<div class="campo_login">
    			<input type="submit" value="{% trans %}Enviar{% endtrans %}"/>
    			<input type="reset" value="{% trans %}Borrar{% endtrans %}"/>
    		</div>
 
		{{ form_end(form) }}
	</section>
	
	<div id="skyline">
		<img src="{{ asset('images/skyline3.png') }}" alt="skyline" />
	</div>
{% endblock %}
