{% extends 'ECPrincipalBundle::layout_comunidad.html.twig' %}

{% block title %}
	{% trans %}Documento{% endtrans %}
	{{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}

{% endblock %}

{% block colder %}
	{{ parent() }}

	{% for flashMessage in app.session.flashbag.get('notice') %}
			{% for flashColor in app.session.flashbag.get('color') %}
    			<div class="flash-notice mensaje {{flashColor}}">
        			{{ flashMessage }}
    			</div>
    		{% endfor %}
	{% endfor %}

		<section class="form">
				<h2 class="verde centrado">{% trans %}Documento{% endtrans %}</h2>

            <form action="{{ path('ec_adminfincas_comunidad_documento_upload', { 'cif': comunidad.cif }) }}" method="post" {{ form_enctype(form) }}>
    				<div class="rojo">{{ form_errors(form) }}</div>
    				
    				<div class="campo_login">
       		 		<div class="label_campo_login">{{ form_label(form.tipo) }}</div>
        				{{ form_widget(form.tipo) }}
        				<div class="error">{{ form_errors(form.tipo) }}</div>
    				</div> 
    				
    				<div class="campo_login">
       		 		<div class="label_campo_login">{{ form_label(form.descripcion) }}</div>
        				{{ form_widget(form.descripcion) }}
        				<div class="error">{{ form_errors(form.descripcion) }}</div>
    				</div> 
    				
    				<div class="campo_login">
       		 		<div class="label_campo_login">{{ form_label(form.file) }}</div>
        				{{ form_widget(form.file) }}
        				<div class="error">{{ form_errors(form.file) }}</div>
    				</div>   

    				<div class="campo_login">
    					<input type="submit" value="{% trans %}Subir{% endtrans %}" id="enviar" />
    				</div>
            </form>
		</section>
{% endblock %}