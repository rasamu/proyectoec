{% extends '::base.html.twig' %}

{% block title %}
	{{comunidad.codigo}} -
{% endblock %}

{% block stylesheets %}
 {{ parent() }}
    <link rel='stylesheet' type='text/css' href="{{ asset('css/menu_comunidad.css') }}" />
    <link rel='stylesheet' type='text/css' href="{{ asset('css/slicknav_comunidad.css') }}" />
{% endblock %}

{% block javascripts %}
  {{ parent() }}
   <script type='text/javascript' src="{{ asset('js/dropdown-menu.min_comunidad.js') }}"></script>

	<script>
		$(document).ready(function() {
 
			// store url for current page as global variable
			current_page = document.location.href
 
			// apply selected states depending on current page
			if (current_page.match('.*tablon.*')) {
				$("#menu_comunidad li:eq(0)").addClass('selected');
			} else if (current_page.match('.*reunion.*')) {
				$("#menu_comunidad li:eq(1)").addClass('selected');
			} else if (current_page.match('.*incidencia.*')) {
				$("#menu_comunidad li:eq(2)").addClass('selected');
			} else if (current_page.match('.*documento.*')) {
				$("#menu_comunidad li:eq(3)").addClass('selected');
			} else if (current_page.match('.*propietario.*')) {
				$("#menu_comunidad li:eq(4)").addClass('selected');
			} else if (current_page.match('.*bloque.*')) {
				$("#menu_comunidad li:eq(5)").addClass('selected');
			} else { // don't mark any nav links as selected
				$("#menu_comunidad li").removeClass('selected');
			};
		});
	</script>
	<script type='text/javascript' src="{{ asset('js/menu_comunidad.js') }}"></script>  
	<script type='text/javascript'>
		$(document).ready(function(e) {
 			$('a[href="http://apycom.com/"]').parent().parent().remove();
		});
	</script>
	         
{% endblock %}

{% block sidebar %}
 {{ parent() }}

{% endblock %}

{% block colder %} 
	{{ parent() }}
	<div id="menu_comunidad_general">
		<div class="verde titulo_comunidad letra_miltonian"><em>{% trans %}Comunidad{% endtrans %}: </em><em>{{comunidad.codigo}}</em></div>
		
		<div id="menu_comunidad">
				<ul id="menu_comunidad_movil" class="menu_comunidad">
