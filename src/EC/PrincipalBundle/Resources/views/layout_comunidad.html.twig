					<li><a href="{{ path('ec_listado_incidencias', { 'cif': comunidad.cif }) }}"><span>{% trans %}Incidencias{% endtrans %}</span></a></li>	
					<li><a href="{{ path('ec_listado_documentos', { 'cif': comunidad.cif }) }}"><span>{% trans %}Documentos{% endtrans %}</span></a></li>	
