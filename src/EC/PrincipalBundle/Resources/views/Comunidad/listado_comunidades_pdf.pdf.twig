<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE pdf SYSTEM "%resources%/dtd/doctype.dtd">
<pdf>
	<dynamic-page>
		<h1 padding="10px" background-color="#005D84" width="100%"><span color="#F7D118">Entre</span><span color="white">Comunidades</span></h1>
		<h2 color="#223E56">{%trans%}Listado de Comunidades{%endtrans%}</h2>
		<table>

			{% for comunidad in comunidades %}
				<tr>
				   <td>{{comunidad.codigo}}</td>
       			<td>{{comunidad.cif}}</td>
       			<td>{{comunidad.city.name}}</td>
      		</tr> 
			{% endfor %}

		</table>
		<p text-align="right">{{ "now"|date("d/m/Y") }}</p>
	</dynamic-page>
</pdf>