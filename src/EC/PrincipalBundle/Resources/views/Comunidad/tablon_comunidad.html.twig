{% extends is_granted('ROLE_ADMINFINCAS') ? 'ECPrincipalBundle::layout_comunidad.html.twig' : 'ECPrincipalBundle::layout.html.twig' %}

{% block title %}
	{{ parent() }}
	{% trans %}Tablón{% endtrans %}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}

{% endblock %}

{% block javascripts %}
		{{ parent() }}

{% endblock %}

{% block colder %}
	{{ parent() }}
	<h2 class="verde centrado">{% trans %}Tablón de la Comunidad{% endtrans %}</h2>
		
		<h3 class="verde izquierda">{% trans %}Incidencias abiertas:{% endtrans %}</h3>
		{% if incidencias is empty%}
			<p>No existen incidencias.</p>
		{% else %}
			{% for incidencia in incidencias %}
				<p><a href="{{ path('ec_incidencia', { 'id': incidencia.id }) }}" style="cursor:pointer;"><img src="{{ asset('images/lupa.gif') }}" alt="ver"></a><i> {{incidencia.fecha | localizeddate('short')}}</i> <b>Categoría: </b>{{incidencia.categoria.nombre}} <b>Bloque: </b>{{incidencia.usuario.propiedad.bloque.num}} <b>Piso: </b>{{incidencia.usuario.propiedad.piso}}</p>
			{% endfor %}
		{% endif %}
	
{% endblock %}
